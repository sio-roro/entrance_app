
<div class="main">
  <div class="login-back">
    <div class="login-form">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-group">
         
          <%= f.text_field :username, autofocus: true, autocomplete: "username", :class => "form-control",:placeholder => " Name" %>
      </div>

      <div class="form-group">

        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:placeholder => " E-mail" %>
      </div>

      <div class="form-group">
        
        
        <%= f.password_field :password, autocomplete: "new-password",:placeholder => " Password"  %>
      </div>

      <div class="form-group">
       
        <%= f.password_field :password_confirmation, autocomplete: "new-password",:placeholder => " Password(again)"  %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>

      <div class="actions">
        <i class="fas fa-arrow-right"></i><%= f.submit "Sign up" %>
      </div>
    <% end %>
    <div class="login-link-area">
    <%= render "users/shared/links" %>
    </div>
    
    </div>
  </div>
</div>
